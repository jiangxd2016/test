@import "../../../stylus/index.styl"

.e-button
    position: relative;

    display: inline-flex;
    flex-direction: column;
    align-items: stretch;

    width: auto;
    height: auto;

    padding: 4px 16px;

    font-size: 14px;
    font-weight: 500;
    line-height: 1.715em;

    color: inherit;
    cursor:pointer;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    vertical-align: middle;

    outline: 0;
    border: 0;
    border-radius:2px;
    background: #0000;

    &::before
      border-radius: inherit;
      bottom: 0;
      box-shadow: 0 1px 5px #0003, 0 2px 2px #00000024, 0 3px 1px -2px #0000001f;
      content: "";
      display: block;
      left: 0;
      position: absolute;
      right: 0;
      top: 0;

    &--sx
      font-size: 12px;
    &--sm
      font-size: 14px
    &--md
      font-size: 16px
    &--lg
     font-size: 18px
    &--lg
     font-size: 20px

    &.disabled
      opacity: .7!important;
      cursor: not-allowed!important;
      outline: 0!important;
    &.plain
      background :#fff;
      color:#222;
    &.round
      border-radius:10px

    &.circle
      border-radius:50%;

    .loading
      position:absolute;
      left:0;
      top:0;

      display:flex;
      align-items:center;
      justify-content:center;

      width:100%;
      height:100%


@import "../../../styl/variables.styl"

.e-button
    display: inline-block;
    line-height: 1.4;
    padding: 16px 30px;
    border-radius: 4px;
    text-decoration: none;
    cursor: pointer;
    text-align: center;
    min-width: 160px;
    font-weight: 700;
    font-size: 15px;
    margin: 0 1px 10px;
    &--default {
      background:$white;
      border: 1px solid $green-7;
      color: $green-7;
      margin: 0;
    }
    &--primary {
      border: 2px solid #00a2fe;
      background: #00a2fe;
      color: #fff;
      box-shadow: 0 16px 10px -10px rgba(0,162,254,0.6);
    }
    &--primary:active {
      box-shadow: 0 14px 10px -10px rgba(0,162,254,0.6);
    }
    &--primary-border {
      border: 2px solid #00a2fe;
      background: #fff;
      color: #00a2fe;
      box-shadow: 0 16px 10px -10px rgba(0,162,254,0.2);
    }
    &--primary-border:active {
      box-shadow: 0 14px 10px -10px rgba(0,162,254,0.2);
    }
    &--purple {
      border: 2px solid #733df9;
      background: #733df9;
      color: #fff;
      box-shadow: 0 16px 10px -10px rgba(115,61,249,0.6);
    }
    &--purple:active {
      box-shadow: 0 14px 10px -10px rgba(115,61,249,0.6);
    }
    &--purple-border {
      border: 2px solid #733df9;
      background: #fff;
      color: #733df9;
      box-shadow: 0 16px 10px -10px rgba(115,61,249,0.2);
    }
    &--purple-border:active {
      box-shadow: 0 14px 10px -10px rgba(115,61,249,0.2);
    }
    &--fade {
      opacity: 1;
      transition: opacity 0.3s 1s;
    }
  html.is-animating &--fade {
    transition: opacity 0.3s 0s;
    opacity: 0;
  }
  .button:active {
    transform: scale(0.98);
  }
    
  @media (min-width: 768px) {
   .button {
      margin: 0 10px 10px;
    }
  }